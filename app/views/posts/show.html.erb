<%= notice %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<%= image_tag @post.image_url if @post.image.present? %>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'All posts', posts_path %>
